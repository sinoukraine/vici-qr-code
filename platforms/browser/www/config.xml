<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="6" defaultlocale="en-US" id="com.vici.qr-code" ios-CFBundleVersion="17" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:hardwareAccelerated="true">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="CordovaHttpPlugin">
        <param name="browser-package" value="CordovaHttpPlugin" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="browser-package" value="BarcodeScanner" />
    </feature>
    <name>Vici QR Code</name>
    <description>
        Vici QR Code
    </description>
    <author email="info@atga.com.au" href="http://atga.com.au">
        Sinopacific Co Limited
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://192.168.1.1/*" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>You can take a photo of your asset using camera and upload it into the app</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>You can select photo of your asset in your photo library and upload it into the app</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription">
        <string>Need photo library access to save pictures there</string>
    </edit-config>
    <config-file parent="ITSAppUsesNonExemptEncryption" platform="ios" target="*-Info.plist">
        <false />
    </config-file>
    <splash src="splash.png" />
    <icon src="icon.png" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-minSdkVersion" value="18" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="deployment-target" value="10.2" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="loadUrlTimeoutValue" value="60000" />
    <preference name="Fullscreen" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
</widget>
